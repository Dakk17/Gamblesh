<UserControl x:Class="FinalosProjektos.Quota"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinalosProjektos"
             mc:Ignorable="d" 
             d:DesignHeight="603.232" d:DesignWidth="1250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="15"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="15"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Grid.RowSpan="3" Background="#FF303130" Opacity="0.5"/>
        <Label Content="Days Remaining" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" VerticalAlignment="Bottom" HorizontalContentAlignment="Center " FontSize="32" Foreground="White"/>
        <Label x:Name="dayRemain" Content="3" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" FontSize="50" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White"/>
        <Label Content="Quota:" Grid.Row="3" Grid.Column="2" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontSize="24" Margin="158,10,158,0" Foreground="White" Grid.ColumnSpan="2"/>
        <Label x:Name="quotaPrice" Content="1200 " Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" HorizontalContentAlignment="Right" FontSize="24" Margin="39,0,276,0" Foreground="White" Grid.ColumnSpan="2"/>
        <Image Source="/KreditBlue.png" Grid.Row="3" Grid.Column="3" VerticalAlignment="Center" Width="50" Height="50" Margin="29,0,226,0"/>
        <Grid Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Content="Quota Level: " Grid.Row="0"  Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalContentAlignment="Center" FontSize="50" FontWeight="Bold" Foreground="White"/>
            <Label x:Name="quotaLevelLabel" Content="1" Grid.Row="0" Grid.Column="1"  VerticalAlignment="Center" HorizontalContentAlignment="Left" FontSize="50" Foreground="White"/>
        </Grid>
    </Grid>
</UserControl>
